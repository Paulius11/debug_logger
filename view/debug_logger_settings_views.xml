<odoo>
    <record id="view_debug_logger_settings" model="ir.ui.view">
        <field name="name">debug.logger.settings.form</field>
        <field name="model">debug.logger.settings</field>
        <field name="arch" type="xml">
            <form string="Debug Logger Settings">
                <group>
                    <field name="logging_methods" widget="many2many_tags" />
                </group>
                <footer>
                    <button string="Save" type="object" class="btn-primary" name="set_values"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="debug_logger_settings_action" model="ir.actions.act_window">
        <field name="name">Debug Logger Settings</field>
        <field name="res_model">debug.logger.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="debug_logger_menu" name="Debug Logger Settings"
              parent="base.menu_config" action="debug_logger_settings_action" />
</odoo>
